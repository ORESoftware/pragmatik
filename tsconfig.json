{
  "compilerOptions": {
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
    },
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "allowUnreachableCode": true,
    "lib": [
      "es2015",
      "es2016"
    ]
  },
  "compileOnSave": false,
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "test",
    "node_modules"
  ]
}
